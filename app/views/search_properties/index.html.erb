<%= render 'layouts/templates/base' %>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <%= link_to 'PropTech Portals', root_path, class: "navbar-brand"%>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <%= link_to 'Home', root_path, class: "nav-link"%>
            </li>
            <li class="nav-item active">
                <%= link_to 'Search Properties', search_properties_path, class: "nav-link"%>
                <span class="sr-only">(current)</span>
            </li>
        </ul>
    </div>
</nav>

<div class="container">
    <h1 class="d-flex justify-content-center mt-3 mb-3">Search For A Property</h1>

    <div class="form-group">
        <%= form_tag controller: "search_properties", action: "create"  %>
        <br/>
        <%= label_tag :council_name, "Search for council name:"  %>
        <%= select_tag :council_name, options_for_select(@council_names_list) %>
        <br/>
        <%= label_tag :description, "Search description:" %>
        <%= text_field_tag :description %>
        <br/>
        <%= submit_tag("Search for property", class: "btn btn-primary") %>
    </div>
