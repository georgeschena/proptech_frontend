                <% @properties['properties'].each do |property| %>
                    <tr>
                        <th>
                            <a href=<%=property['url']%> target="_blank">Link to Property</a>
                        </th>
                        <th>
                            <small><%=property['council_name']%></small>
                        </th>
                        <th><%=property['address']%></th>
                        <th><%=property['description']%></th>
                        <th><%=property['refernce_number']%></th>
